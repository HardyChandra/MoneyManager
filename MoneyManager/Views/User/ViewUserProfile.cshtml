}

<div>
    <h1>User Profile</h1>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label style="font-size: 20px"> @Html.DisplayNameFor(model => model.Name)</label>
        </dt>

        <dd>
            <p style="font-size: 20px">@Html.DisplayFor(model => model.Name)</p>
