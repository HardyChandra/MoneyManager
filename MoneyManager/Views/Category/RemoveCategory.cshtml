@model MoneyManager.DataLibrary.Models.Category

@{
    ViewBag.Title = "Remove Category";
}

<h1>Remove Category</h1>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <span id="confirmDeleteSpan" style="display:none">
                <span>Are you sure you want to delete?</span>
                <button type="submit" class="btn btn-danger">Yes</button>
                <a href="#" class="btn btn-primary" onclick="confirmDelete(false)">No</a>
            </span>

            <span id="deleteSpan">
                <a href="#" class="btn btn-danger" onclick="confirmDelete(true)">Delete</a>
            </span>
        </div>
        if (ViewBag.Message != null)
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>

        }
    }
</div>

@section Scripts{
    <script src="~/Scripts/customJS.js"></script>
}