@model MoneyManager.DataLibrary.Models.Expenses

@{
    ViewBag.Title = "Remove Expenses";
}

<h1>Remove Expenses</h1>

<div>
    <hr />
    <dl class="dl-horizontal">       
        <dt>
            @Html.DisplayNameFor(model => model.ExpensesDetail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExpensesDetail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalExpenses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalExpenses)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <span id="confirmDeleteSpan" style="display:none">
                <span>Are you sure you want to delete?</span>
                <button type="submit" class="btn btn-danger">Yes</button>
                <a href="#" class="btn btn-primary" onclick="confirmDelete(false)">No</a>
            </span>
            <span id="deleteSpan">
                <a href="#" class="btn btn-danger" onclick="confirmDelete(true)">Delete</a>
            </span>
        </div>
    }
</div>

@section Scripts{
    <script src="~/Scripts/customJS.js"></script>
}