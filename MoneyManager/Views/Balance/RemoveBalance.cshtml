@model MoneyManager.DataLibrary.Models.Balance

@{
    ViewBag.Title = "Remove Balance";
}

<h1>Remove Balance</h1>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TotalBalance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalBalance)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="col-md-offset-2 col-md-10">
                <span id="confirmDeleteSpan" style="display:none">
                    <span>Are you sure you want to delete?</span>
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a href="#" class="btn btn-primary" onclick="confirmDelete(false)">No</a>
                </span>

                <span id="deleteSpan">
                    <a href="#" class="btn btn-danger" onclick="confirmDelete(true)">Delete</a>
                </span>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/Scripts/customJS.js"></script>
}
